@model WebsiteMusic.Models.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a class="breadcrumb-item" asp-area="Admin" asp-controller="AdminTaikhoans" asp-action="">Danh sách tài khoản</a>
            <span class="breadcrumb-item active">Thông tin tài khoản quản trị</span>
        </nav>
    </div>
</div>
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin tài khoản quản trị</h4>
        <div class="table-responsive">
            <table class="product-info-table m-t-20">
                <tbody>
                    <tr>
                        <td>ID</td>
                        <td>@Model.AccountId</td>
                    </tr>
                    <tr>
                        <td>Họ và tên</td>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <td>SĐT</td>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <td>Lần cuối đăng nhâp</td>
                        <td>@Model.LastLogin</td>
                    </tr>
                    <tr>
                        <td>Quyền truy cập</td>
                        <td>@Model.Role.Description</td>
                    </tr>
                    <tr>
                        <td>Tình trạng</td>
                        <td>
                            @if (Model.Active)
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-success badge-dot m-r-10"></div>
                                    <div>In Stock</div>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <div class="badge badge-danger badge-dot m-r-10"></div>
                                    <div>Out of Stock</div>
                                </div>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>
