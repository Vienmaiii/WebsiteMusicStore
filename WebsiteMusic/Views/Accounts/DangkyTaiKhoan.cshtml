@model WebsiteMusic.ModelViews.RegisterViewModel

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="panel-heading">
    <h2 class="panel-title">
        <a data-toggle="collapse" data-parent="#checkout-page" href="#payment-address-content" class="accordion-toggle">
            Đăng ký tài khoản
        </a>
    </h2>
</div>
<form asp-action="DangkyTaiKhoan">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="panel-body row">
        <div class="col-md-6 col-sm-6" style="left: 500px;">
            <h3>Thông tin cá nhân</h3>
            <div class="form-group">
                <label for="lastname">Họ và tên <span class="require">*</span></label>
                <input type="text" id="lastname" class="form-control" asp-for="FullName" placeholder="Họ và Tên">
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="email">Địa chỉ E-Mail <span class="require">*</span></label>
                <input type="text" id="email" class="form-control" asp-for="Email" placeholder="Địa chỉ Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="telephone">Số điện thoại <span class="require">*</span></label>
                <input type="text" id="telephone" class="form-control" asp-for="Phone" placeholder="Số điện thoại">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <h3>Mật khẩu của bạn</h3>
            <div class="form-group">
                <label for="password">Mật khẩu <span class="require">*</span></label>
                <input type="password" id="password" class="form-control" asp-for="Password" placeholder="Mật khẩu">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password-confirm">Nhập lại mật khẩu <span class="require">*</span></label>
                <input type="password" id="password-confirm" class="form-control" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="col-12">
                <button class="btn btn-primary  pull-right" id="button-payment-address">Đăng ký</button>
            </div>
        </div>


    </div>
</form>


