@model List<WebsiteMusic.ModelViews.CartItem>
@if (Model != null && Model.Count() > 0)
{
    <div class="top-cart-content-wrapper">
        <div class="top-cart-content">
            <ul class="scroller" style="height: 250px;">
                @foreach (var item in Model)
                {
                    string url = $"/{item.product.Alias}-{item.product.ProductId}.html";
                <li>
                    <a href="@url"><img class="img-full" src="~/images/products/@item.product.Thumb" alt="@item.product.ProductName" width="37" height="34"></a>
                    <strong><a href="@url">@item.product.ProductName</a></strong>
                    <em>@item.amount x @item.product.Price.Value.ToString("#,##0") VNĐ</em>
                </li>
                }
            </ul>
            <div class="text-right">
                <a href="cart.html" class="btn btn-secondary btn-primary-hover">Xem giỏ hàng</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="/checkout.html" class="btn btn-primary">Thanh toán</a> }
                else
                {
                    <a href="/dang-nhap.html?returnUrl=/checkout.html" class="btn btn-primary">Thanh toán</a>}
            </div>
        </div>

    </div>
}

else
{
    <div class="top-cart-content-wrapper">
        <div class="top-cart-content">
            <ul class="scroller" style="height: 250px;">
                <li><h4 class="mb-0">Giỏ hàng rỗng</h4></li>
            </ul>
        </div>
    </div>
}

