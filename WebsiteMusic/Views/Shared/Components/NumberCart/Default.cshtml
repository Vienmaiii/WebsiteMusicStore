@model List<WebsiteMusic.ModelViews.CartItem>
@if (Model != null && Model.Count() > 0)
 {
    <div class="top-cart-info">
        <a href="javascript:void(0);" class="top-cart-info-count">@Model.Count()</a>
        <a href="javascript:void(0);" class="top-cart-info-value">@Model.Sum(x => x.TotalMoney).ToString("#,##0") VNĐ</a>
    </div> 
 }
 else
 {
    <div class="top-cart-info">
        <a href="javascript:void(0);" class="top-cart-info-count">0</a>
        <a href="javascript:void(0);" class="top-cart-info-value">0</a>
    </div>
 }




   